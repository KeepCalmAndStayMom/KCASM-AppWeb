                        text: "Cromoterapia",
                        font: "30px sans-serif",
                        color: "black"
                    },
                    legend: {
                        position: "bottom"
                    },
                    series: [{
                        type: "column",
                        data: @Json.Serialize(Model.HueArray.Soft),
                        name: "Cromoterapie Soft",
                        color: "#00ff00",
                        axis: "cromosoft"
                    }, {
                        type: "column",
                        data: @Json.Serialize(Model.HueArray.Hard),
                        name: "Cromoterapie Hard",
                        color: "#0066ff",
                        axis: "cromohard"
                    }],
                    valueAxes: [{
                        name: "cromosoft",
                        color: "#00ff00",
                        min: 0,
                        max: 30
                    }, {
                        name: "cromohard",
                        color: "#0066ff",
                        min: 0,
                        max: 30
                        }],
                    categoryAxis: {
                        categories: @Json.Serialize(Model.HueArray.Date),
                        axisCrossingValues: [0, 22],
                        justified: true,
                        labels: { rotation: "auto" }
                    },
                    tooltip: {
                        visible: true,
                        format: "{0}",
                        template: "#= category #: #= value #"
                    }
                });
            }

            $(document).ready(createChart);
            $(document).bind("kendo:skinChange", createChart);
        </script>


        <h1>Sensor</h1>
<div id="sensor"></div>
        <script>
            function createChart() {
                $("#sensor").kendoChart({
                    title: {
                        text: "Sensore",
                        font: "30px sans-serif",
                        color: "black"
                    },
                    legend: {
                        position: "bottom"
                    },
                    series: [{
                        type: "line",
                        style: "smooth",
                        data: @Json.Serialize(Model.SensorArray.Temperature),
                        name: "Temperature [C°]",
                        color: "#ff1c1c",
                        axis: "temp"
                    }, {
                        type: "line",
                        style: "smooth",
                        data: @Json.Serialize(Model.SensorArray.Humidity),
                        name: "Umidità [%]",
                        color: "#ffae00",
                        axis: "hum"
                    }, {
                        type: "line",
                        style: "smooth",
                        data: @Json.Serialize(Model.SensorArray.Luminescence),
                        name: "Luminosita [lux]",
                        color: "#73c100",
                        axis: "lum"
                    }],
                    valueAxes: [{
                        name: "temp",
                        color: "#ff1c1c",
                        min: 0,
                        max: 50
                    }, {
                        name: "hum",
                        color: "#ffae00",
                        min: 0,
                        max: 100
                    }, {
                        name: "lum",
                        color: "#73c100",
                        min: 0,
                        max: 1000
                    }],
                    categoryAxis: {
                        categories: @Json.Serialize(Model.SensorArray.Date),
                        axisCrossingValues: [0, 0, 22],
                        justified: true,
                        labels: { rotation: "auto" }
                    },
                    tooltip: {
                        visible: true,
                        format: "{0}",
                        template: "#= category #: #= value #"
                    }
                });
            }

            $(document).ready(createChart);
            $(document).bind("kendo:skinChange", createChart);
        </script>



        <script>
            $(document).ready(function () {
                $(".view-mode").click(function () {
                    if ($('input[name=mode]:checked').val() == "total")
                        $(".date-mode").prop("type", "date");
                    else
                        $(".date-mode").prop("type", "datetime-local");
                });
            });
        </script>
                        <li><a asp-controller="Medic" asp-action="Settings">Impostazioni</a></li>
                        <li><a asp-controller="Home" asp-action="Logout">Esci</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
